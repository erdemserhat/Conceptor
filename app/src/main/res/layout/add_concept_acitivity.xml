<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/write_a_title"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/addConceptActivityEditTextTitle">
    </EditText>

    <EditText
        android:id="@+id/addConceptActivityEditTextPostDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/write_an_explanation"
        android:lines="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/addConceptActivityUploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:onClick="saveImage"
        android:text="@string/upload_image">

    </Button>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/addConceptActivityImageView">
    </ImageView>


</LinearLayout>